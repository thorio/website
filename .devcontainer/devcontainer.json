{
	"build": {
		"dockerfile": "Dockerfile"
	},
	"onCreateCommand": "pnpm i --frozen-lockfile",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": { }
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"antfu.goto-alias",
				"EditorConfig.EditorConfig",
				"gruntfuggly.todo-tree",
				"mrmlnc.vscode-scss",
				"shardulm94.trailing-spaces",
				"sibiraj-s.vscode-scss-formatter",
				"Vue.volar"
			]
		}
	},
	"appPort": [
		"3000:3000", // home
		"3001:3001", // errorpages
		"3002:3002", // web

		// vite websockets
		"24678:24678",
		"24679:24679",
		"24680:24680"
	]
}
